<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    >

    <Text
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text_color="#000000"
        ohos:text_size="20fp"
        ohos:text_weight="700"
        ohos:text="码生成"
        ohos:margin="20vp"
        />

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:top_margin="20vp"
        >
        <Image
            ohos:id="$+id:englishQRCode"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:weight="1"
            ohos:background_element="$graphic:background_border"
            />
        <Image
            ohos:id="$+id:chineseQRCode"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:weight="1"
            ohos:background_element="$graphic:background_border"
            />

    </DirectionalLayout>
    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:top_margin="20vp"
        ohos:left_margin="20vp"
        ohos:right_margin="20vp"
        >
        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:weight="1"
            ohos:text="生成英文二维码"
            ohos:text_color="#444444"
            ohos:text_alignment="center"
            ohos:right_margin="10vp"
            />
        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:weight="1"
            ohos:text="生成中文二维码"
            ohos:text_color="#444444"
            ohos:text_alignment="center"
            ohos:left_margin="10vp"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:top_margin="20vp"
        >
        <Image
            ohos:id="$+id:colorQRCode"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:weight="1"
            ohos:background_element="$graphic:background_border"
            />
        <Image
            ohos:id="$+id:logoQRCode"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:weight="1"
            ohos:background_element="$graphic:background_border"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:top_margin="20vp"
        ohos:left_margin="20vp"
        ohos:right_margin="20vp"
        >
        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:weight="1"
            ohos:text="生成不同颜色二维码"
            ohos:text_color="#444444"
            ohos:text_alignment="center"
            ohos:right_margin="10vp"
            />
        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:weight="1"
            ohos:text="生成logo图标二维码"
            ohos:text_color="#444444"
            ohos:text_alignment="center"
            ohos:left_margin="10vp"
            />
    </DirectionalLayout>
</DirectionalLayout>