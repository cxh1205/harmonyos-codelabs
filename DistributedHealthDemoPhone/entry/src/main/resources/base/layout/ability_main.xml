<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:test0"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="horizontal_center"
    ohos:background_element="$media:city"
    ohos:orientation="vertical">
    <Switch
        ohos:id="$+id:btn_switch"
        ohos:height="30vp"
        ohos:width="60vp"
        ohos:layout_alignment="left"
        ohos:text_state_off="$string:off"
        ohos:text_state_on="$string:on"/>

    <Button
        ohos:id="$+id:button_syncData"
        ohos:height="35vp"
        ohos:width="200vp"
        ohos:background_element="$graphic:step"
        ohos:layout_alignment="horizontal_center"
        ohos:text="$string:sync_watch_data"
        ohos:text_color="#FFF7F7FA"
        ohos:text_size="27fp"
        ohos:top_margin="20vp"
        ohos:top_padding="10px"
        />

    <DirectionalLayout
        ohos:id="$+id:stepLayout"
        ohos:height="240vp"
        ohos:width="370vp"
        ohos:alignment="horizontal_center"
        ohos:background_element="$graphic:step"
        ohos:top_margin="50vp">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:alignment="vertical_center"
            ohos:orientation="horizontal">

            <Text
                ohos:id="$+id:stepTimeText"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:start_margin="115vp"
                ohos:end_margin="0vp"
                ohos:text="$string:sync_time"
                ohos:text_alignment="center"
                ohos:text_color="white"
                ohos:text_size="20fp"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:alignment="vertical_center"
            ohos:orientation="horizontal">

            <RoundProgressBar
                ohos:id="$+id:stepData"
                ohos:height="150vp"
                ohos:width="150vp"
                ohos:background_element="$graphic:circle_element"
                ohos:margin="40px"
                ohos:max_angle="360"
                ohos:progress="0"
                ohos:progress_color="#FFFAF7F5"
                ohos:progress_hint_text="$string:step0"
                ohos:progress_width="20vp"
                ohos:start_angle="0"/>

            <RoundProgressBar
                ohos:id="$+id:stepData1"
                ohos:height="150vp"
                ohos:width="150vp"
                ohos:background_element="$graphic:circle_element"
                ohos:margin="40px"
                ohos:max_angle="360"
                ohos:progress="0"
                ohos:progress_color="#FFF5F5F5"
                ohos:progress_hint_text="$string:low_intensity"
                ohos:progress_width="20vp"
                ohos:start_angle="0"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:alignment="vertical_center"
            ohos:orientation="horizontal">

            <Text
                ohos:id="$+id:stepDistances"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:start_margin="40px"
                ohos:end_margin="0px"
                ohos:text="$string:distance0"
                ohos:text_color="white"
                ohos:text_size="15fp"/>

            <Text
                ohos:id="$+id:stepHeat"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:start_margin="40px"
                ohos:end_margin="0px"
                ohos:text="$string:kal0"
                ohos:text_color="white"
                ohos:text_size="15fp"/>

            <Text
                ohos:id="$+id:stepFloor"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:start_margin="40px"
                ohos:end_margin="0px"
                ohos:text="$string:floors0"
                ohos:text_color="white"
                ohos:text_size="15fp"/>
        </DirectionalLayout>

    </DirectionalLayout>

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:id="$+id:test10"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:alignment="horizontal_center"
        ohos:orientation="horizontal">

      <DirectionalLayout
        ohos:id="$+id:test3"
        ohos:height="180vp"
        ohos:layout_alignment="left"
        ohos:width="175vp"
        ohos:alignment="left"
        ohos:background_element="$graphic:rate"
        ohos:top_margin="50vp"
        >
        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:alignment="vertical_center"
            ohos:orientation="vertical">

            <Text
                ohos:id="$+id:rateText"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:start_margin="10vp"
                ohos:end_margin="0vp"
                ohos:text="$string:heart_health"
                ohos:text_color="#FF0C0C0C"
                ohos:text_size="20fp"/>

            <Text
                ohos:id="$+id:rateTimeText"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:start_margin="10vp"
                ohos:end_margin="0vp"
                ohos:text="$string:zero4"
                ohos:text_color="white"
                ohos:text_size="20fp"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:alignment="vertical_center"
            ohos:orientation="horizontal">

            <Text
                ohos:id="$+id:rateData"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="$string:zero"
                ohos:text_color="#FF0C0C0C"
                ohos:text_size="30fp"
                ohos:top_margin="30vp"/>

            <Text
                ohos:id="$+id:rateData5"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="$string:beat_min"
                ohos:text_color="#FFF8F8F8"
                ohos:text_size="20fp"
                ohos:top_margin="30vp"/>

        </DirectionalLayout>
    </DirectionalLayout>

        <Component
            ohos:height="match_content"
            ohos:width="5vp"/>

      <DirectionalLayout
        ohos:id="$+id:test4"
        ohos:height="180vp"
        ohos:width="175vp"
        ohos:layout_alignment="right"
        ohos:background_element="$graphic:range"
        ohos:top_margin="50vp"
        >

        <Text
            ohos:id="$+id:rateTexts"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_margin="10vp"
            ohos:end_margin="0vp"
            ohos:text="$string:heart_rate_range"
            ohos:text_color="#FF0E0E0E"
            ohos:text_size="20fp"/>

        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:alignment="vertical_center"
            ohos:orientation="horizontal">

            <Text
                ohos:id="$+id:rateRange"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="$string:zero2"
                ohos:text_color="#FF0E0E0E"
                ohos:text_size="30fp"
                ohos:top_margin="40vp"/>

            <Text
                ohos:id="$+id:rateData7"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="$string:beat_min"
                ohos:text_color="#FFF8F8F8"
                ohos:text_size="20fp"
                ohos:top_margin="40vp"/>

        </DirectionalLayout>

      </DirectionalLayout>

    </DirectionalLayout>

</DirectionalLayout>