<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:direct"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#FF00B7FF"
    ohos:alignment="horizontal_center"
    ohos:scale_mode="stretch"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text_helloworld1"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="horizontal_center"
        ohos:left_padding="80vp"
        ohos:right_padding="80vp"
        ohos:text=""
        ohos:text_size="30fp"
        ohos:top_padding="100vp"
        />
        <StackLayout
            ohos:height="match_content"
            ohos:layout_alignment="center"
            ohos:top_margin="50vp"
            ohos:width="match_content">
            <Image
                ohos:id="$+id:face_image"
                ohos:height="200vp"
                ohos:width="200vp"
                ohos:layout_alignment="center"
                ohos:image_src="$media:face"
                ohos:scale_mode="stretch"
                />
            <Image
                ohos:id="$+id:hx_image"
                ohos:height="200vp"
                ohos:width="200vp"
                ohos:layout_alignment="center"
                ohos:image_src="$media:sm"
                ohos:scale_mode="stretch"
                ohos:visibility="hide"
                />
        </StackLayout>
    <Text
        ohos:id="$+id:text_status"
        ohos:height="100vp"
        ohos:width="match_parent"
        ohos:layout_alignment="center"
        ohos:text_alignment="center"
        ohos:max_text_lines="3"
        ohos:multiple_lines="true"
        ohos:top_margin="60vp"
        ohos:text=""
        ohos:text_font="$string:text_font"
        ohos:text_size="20fp"
        ohos:top_padding="40vp"
        ohos:visibility="invisible"
        />
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:width="300vp"
        ohos:height="match_content"
        ohos:top_margin="50vp"
        ohos:orientation="horizontal">

            <Button
                ohos:id="$+id:button_start"
                ohos:height="60vp"
                ohos:width="0"
                ohos:align_parent_bottom="true"
                ohos:background_element="$graphic:button_element"
                ohos:layout_alignment="horizontal_center"
                ohos:left_padding="10vp"
                ohos:right_padding="10vp"
                ohos:text="$string:start_facial_recognition"
                ohos:text_color="#FFFCFCFC"
                ohos:text_size="15fp"
                ohos:right_margin="10vp"
                ohos:weight="1"
               />

            <Button
                ohos:id="$+id:button_cancel"
                ohos:height="60vp"
                ohos:width="0"
                ohos:align_parent_bottom="true"
                ohos:background_element="$graphic:button_element"
                ohos:layout_alignment="horizontal_center"
                ohos:left_padding="10vp"
                ohos:right_padding="10vp"
                ohos:text="$string:disabling_facial_recognition"
                ohos:text_color="#FFFCFCFC"
                ohos:text_size="15fp"
                ohos:weight="1"
                />
    </DirectionalLayout>
</DirectionalLayout>