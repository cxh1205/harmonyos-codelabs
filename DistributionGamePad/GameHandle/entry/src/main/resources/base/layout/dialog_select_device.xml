<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:background_element="$graphic:background_card"
    ohos:height="300vp"
    ohos:orientation="vertical"
    ohos:width="match_parent">

    <DirectionalLayout
        ohos:height="49vp"
        ohos:start_padding="12vp"
        ohos:end_padding="12vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal">

        <Text
            ohos:id="$+id:select_devices"
            ohos:height="match_parent"
            ohos:text="$string:selectDevice"
            ohos:text_size="18fp"
            ohos:width="match_content"
            ohos:weight="5"/>

        <Text
            ohos:text_size="18fp"
            ohos:align_parent_right="true"
            ohos:height="match_parent"
            ohos:id="$+id:confirm"
            ohos:text="$string:confirm"
            ohos:text_color="blue"
            ohos:width="match_content"
            ohos:weight="1"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:background_element="#eeeeee"
        ohos:height="1vp"
        ohos:width="match_parent" />


    <ListContainer
        ohos:height="250vp"
        ohos:id="$+id:list_devices"
        ohos:width="match_parent" />


</DirectionalLayout>