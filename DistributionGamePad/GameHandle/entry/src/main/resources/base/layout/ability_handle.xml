<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:layout"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:background_element="$media:bg"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal">
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_margin="275vp"
            ohos:end_margin="0vp"
            ohos:top_margin="100vp"
            ohos:text_size="40vp"
            ohos:text="$string:score"
            ohos:text_color="#C1CDC1"
            />
        <Text
            ohos:id="$+id:score"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:top_margin="100vp"
            ohos:text_size="40vp"
            ohos:text="$string:startScore"
            ohos:text_color="#C1CDC1"
            />
    </DirectionalLayout>
    <Button
        ohos:id="$+id:btn"
        ohos:width="160vp"
        ohos:height="160vp"
        ohos:start_margin="28vp"
        ohos:end_margin="0vp"
        ohos:bottom_margin="28vp"
        ohos:background_element="$media:bigcircle"
        ohos:align_parent_bottom="true"
        ohos:align_parent_left="true"
        />
    <Button
        ohos:id="$+id:small_circle"
        ohos:width="80vp"
        ohos:height="80vp"
        ohos:background_element="$media:smallcircle"
        ohos:start_margin="68vp"
        ohos:end_margin="0vp"
        ohos:bottom_margin="68vp"
        ohos:text_alignment="center"
        ohos:align_parent_bottom="true"
        ohos:align_parent_left="true"
        />

    <!--暂停键和重开键-->
    <Button
        ohos:id="$+id:pause"
        ohos:width="60vp"
        ohos:height="60vp"
        ohos:text_size="10fp"
        ohos:background_element="$media:pause"
        ohos:text="$string:pause"
        ohos:text_alignment="center"
        ohos:start_margin="270vp"
        ohos:end_margin="0vp"
        ohos:bottom_margin="40vp"
        ohos:align_parent_bottom="true"
        ohos:align_parent_left="true"
        />
    <Button
        ohos:id="$+id:start"
        ohos:width="60vp"
        ohos:height="60vp"
        ohos:text_size="10fp"
        ohos:background_element="$media:pause"
        ohos:text="$string:start"
        ohos:text_alignment="center"
        ohos:start_margin="380vp"
        ohos:end_margin="0vp"
        ohos:bottom_margin="40vp"
        ohos:align_parent_bottom="true"
        ohos:align_parent_left="true"
        />

    <!--技能键A、B-->
    <Image
        ohos:id="$+id:btn_A"
        ohos:width="70vp"
        ohos:height="70vp"
        ohos:start_margin="0vp"
        ohos:end_margin="155vp"
        ohos:bottom_margin="30vp"
        ohos:background_element="$media:a"
        ohos:text_alignment="center"
        ohos:align_parent_bottom="true"
        ohos:align_parent_right="true"
        />
    <Image
        ohos:id="$+id:btn_B"
        ohos:width="100vp"
        ohos:height="100vp"
        ohos:start_margin="0vp"
        ohos:end_margin="60vp"
        ohos:bottom_margin="100vp"
        ohos:background_element="$media:b"
        ohos:text_alignment="center"
        ohos:align_parent_bottom="true"
        ohos:align_parent_right="true"
        />

</DependentLayout>