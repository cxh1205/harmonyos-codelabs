<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent">
    <Image
        ohos:id="$+id:image"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:center_in_parent="true"/>
    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:orientation="horizontal"
        ohos:alignment="center">
        <DirectionalLayout
            ohos:id="$+id:crop_image"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_margin="15vp"
            ohos:end_margin="15vp">
            <Image
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:scale_mode="stretch"
                ohos:image_src="$media:crop"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="10fp"
                ohos:text="$string:rightability_crop"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:id="$+id:scale_image"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_margin="15vp"
            ohos:end_margin="15vp">
            <Image
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:scale_mode="stretch"
                ohos:image_src="$media:scale"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="10fp"
                ohos:text="$string:rightability_scale"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:id="$+id:mirror_image"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_margin="15vp"
            ohos:end_margin="15vp">
            <Image
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:scale_mode="stretch"
                ohos:image_src="$media:mirror"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="10fp"
                ohos:text="$string:rightability_mirror"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:id="$+id:save_image"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_margin="15vp"
            ohos:end_margin="15vp">
            <Image
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:scale_mode="stretch"
                ohos:image_src="$media:save"/>
            <Text
                ohos:id="$+id:save_text"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="10fp"
                ohos:text="$string:rightability_save"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:id="$+id:device_image"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_margin="15vp"
            ohos:end_margin="15vp">
            <Image
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:scale_mode="stretch"
                ohos:image_src="$media:select"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="10fp"
                ohos:text="$string:rightability_select"/>
        </DirectionalLayout>
        <DirectionalLayout
            ohos:id="$+id:cir_image"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_margin="15vp"
            ohos:end_margin="15vp">
            <Image
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:scale_mode="stretch"
                ohos:image_src="$media:cir"/>
            <Text
                ohos:id="$+id:cir_text"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="10fp"
                ohos:text="$string:rightability_cir"/>
        </DirectionalLayout>
    </DirectionalLayout>
</DependentLayout>