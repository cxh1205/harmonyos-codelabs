<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    ohos:id="$+id:ability_main"
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:background_element="$graphic:background_ability_dialog">
    <RadioContainer
        ohos:id="$+id:radio_container"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:center_in_parent="true">
        <RadioButton
            ohos:height="40vp"
            ohos:width="match_content"
            ohos:text="$string:select_add"
            ohos:text_size="20fp"/>
        <RadioButton
            ohos:height="40vp"
            ohos:width="match_content"
            ohos:text="$string:select_update"
            ohos:start_margin="10vp"
            ohos:end_margin="0vp"
            ohos:text_size="20fp"/>
    </RadioContainer>
    <Button
        ohos:id="$+id:button_cancel"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text_size="15fp"
        ohos:text="$string:select_cancel"
        ohos:top_padding="5vp"
        ohos:bottom_padding="5vp"
        ohos:end_padding="15vp"
        ohos:start_padding="15vp"
        ohos:text_color="white"
        ohos:top_margin="10vp"
        ohos:start_margin="20vp"
        ohos:end_margin="0vp"
        ohos:bottom_margin="10vp"
        ohos:align_parent_bottom="true"
        ohos:background_element="$graphic:background_ability_button"/>
    <Button
        ohos:id="$+id:button_confirm"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text_size="15fp"
        ohos:text="$string:select_confirm"
        ohos:top_padding="5vp"
        ohos:bottom_padding="5vp"
        ohos:end_padding="15vp"
        ohos:start_padding="15vp"
        ohos:text_color="white"
        ohos:end_margin="20vp"
        ohos:start_margin="0vp"
        ohos:bottom_margin="10vp"
        ohos:align_parent_bottom="true"
        ohos:align_parent_right="true"
        ohos:background_element="$graphic:background_ability_button"/>
</DependentLayout>
