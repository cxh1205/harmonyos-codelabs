<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_content"
    ohos:end_margin="4vp"
    ohos:orientation="vertical"
    ohos:start_margin="4vp">

    <DependentLayout
        ohos:height="140vp"
        ohos:width="220vp">

        <Image
            ohos:id="$+id:image_iv"
            ohos:height="140vp"
            ohos:width="220vp"
            ohos:scale_mode="center"
            />
    </DependentLayout>

    <Text
        ohos:id="$+id:name_tv"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:bottom_margin="4vp"
        ohos:max_text_lines="1"
        ohos:text_alignment="left"
        ohos:text_color="#333333"
        ohos:text_size="16fp"
        ohos:top_margin="4vp"
        />

    <Text
        ohos:id="$+id:content_tv"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:enabled="true"
        ohos:max_text_lines="1"
        ohos:text_alignment="left"
        ohos:text_color="#999999"
        ohos:text_size="14fp"/>

</DirectionalLayout>