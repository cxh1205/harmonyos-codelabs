<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:orientation="vertical"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:background_element="$graphic:dialog_bg"
    ohos:alignment="center"
    >
    <Text
        ohos:height="match_parent"
        ohos:width="match_content"
        ohos:text_alignment="center"
        ohos:text="确定重新开始游戏吗?"
        ohos:text_size="20fp"
        ohos:text_color="#222222"
        ohos:padding="30vp"
        ohos:id="$+id:text"
        ohos:weight="1"
        />
    <Text
        ohos:width="match_parent"
        ohos:height="1px"
        ohos:background_element="#eeeeee"
        />
    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="50vp"
        ohos:orientation="horizontal"
        >
        <Button
            ohos:width="match_parent"
            ohos:height="match_parent"
            ohos:weight="1"
            ohos:text="确认"
            ohos:text_size="20fp"
            ohos:text_color="#666666"
            ohos:id="$+id:comfirm"
            />
        <Text
            ohos:width="1px"
            ohos:height="match_parent"
            ohos:background_element="#eeeeee"
            />
        <Button
            ohos:width="match_parent"
            ohos:height="match_parent"
            ohos:weight="1"
            ohos:text="取消"
            ohos:text_size="20fp"
            ohos:text_color="#666666"
            ohos:id="$+id:cancel"
            />
    </DirectionalLayout>
</DirectionalLayout>