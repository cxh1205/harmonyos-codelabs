<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="#FFEFF0"
    ohos:remote="true">


        <Text
            ohos:id="$+id:title"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:horizontal_center="true"
            ohos:left_margin="10vp"
            ohos:right_margin="10vp"
            ohos:text="$string:title"
            ohos:text_color="#E5000000"
            ohos:text_size="12vp"
            ohos:text_weight="500"
            ohos:auto_font_size="true"
            ohos:multiple_lines="false"
            ohos:text_alignment="center"
            ohos:top_margin="12vp"/>


    <DirectionalLayout
        ohos:id="$+id:card2_hints"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:center_in_parent="true"
        ohos:visibility="visible">

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="$string:init_data"
            ohos:text_alignment="center">
        </Text>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:card2_content"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:bottom_margin="12vp"

        ohos:orientation="vertical"
        ohos:start_margin="12vp"
        ohos:visibility="invisible">

        <DependentLayout
            ohos:id="$+id:movie_top"
            ohos:height="48vp"
            ohos:width="match_parent"
            ohos:orientation="horizontal">


            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:layout_alignment="vertical_center"
                ohos:orientation="vertical">

                <Text
                    ohos:id="$+id:movie_top_title"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text_color="#E5CB1414"
                    ohos:text_size="14fp"
                    ohos:text_weight="500"
                    ohos:truncation_mode="ellipsis_at_end"/>

                <Text
                    ohos:id="$+id:movie_top_introduction"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text_color="#FFC47613"
                    ohos:text_size="10fp"
                    ohos:text_weight="400"
                    ohos:top_margin="2vp"
                    ohos:max_text_lines="1"
                    />
            </DirectionalLayout>
        </DependentLayout>

        <Image
            ohos:height="0.5vp"
            ohos:width="match_parent"
            ohos:image_src="$graphic:form_list_pattern_form_card_default_divide_line"
            ohos:scale_mode="zoom_center"/>

        <DependentLayout
            ohos:id="$+id:movie_bottom"
            ohos:height="48vp"
            ohos:width="match_parent"
            ohos:orientation="horizontal">

            <DirectionalLayout
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:layout_alignment="vertical_center"
                ohos:orientation="vertical">

                <Text
                    ohos:id="$+id:movie_bottom_title"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text_color="#E5000000"
                    ohos:text_size="14fp"
                    ohos:text_weight="500"
                    ohos:truncation_mode="ellipsis_at_end"/>

                <Text
                    ohos:id="$+id:movie_bottom_introduction"
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:text_color="#99000000"
                    ohos:text_size="10fp"
                    ohos:text_weight="400"
                    ohos:top_margin="2vp"
                    ohos:max_text_lines="1"
                    />
            </DirectionalLayout>
        </DependentLayout>

    </DirectionalLayout>
</DependentLayout>