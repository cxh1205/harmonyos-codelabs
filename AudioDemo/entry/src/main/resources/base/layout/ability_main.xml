<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:sound_music_play_btn"
        ohos:height="50vp"
        ohos:width="150vp"
        ohos:background_element="$graphic:selector_ability_main"
        ohos:end_padding="10vp"
        ohos:start_padding="10vp"
        ohos:text="$string:audio_play"
        ohos:text_color="$color:dark_grey"
        ohos:text_size="18vp"/>

    <Button
        ohos:id="$+id:sound_system_play_btn"
        ohos:height="50vp"
        ohos:width="150vp"
        ohos:background_element="$graphic:selector_ability_main"
        ohos:below="$id:sound_music_play_btn"
        ohos:end_padding="10vp"
        ohos:start_padding="10vp"
        ohos:text="$string:short_play"
        ohos:text_color="$color:dark_grey"
        ohos:text_size="18vp"
        ohos:top_margin="10vp"/>

    <Button
        ohos:id="$+id:sound_record_btn"
        ohos:height="50vp"
        ohos:width="150vp"
        ohos:background_element="$graphic:selector_ability_main"
        ohos:below="$id:sound_system_play_btn"
        ohos:end_padding="10vp"
        ohos:start_padding="10vp"
        ohos:text="$string:audio_record"
        ohos:text_color="$color:dark_grey"
        ohos:text_size="18vp"
        ohos:top_margin="10vp"/>

    <Button
        ohos:id="$+id:sound_volume_btn"
        ohos:height="50vp"
        ohos:width="150vp"
        ohos:background_element="$graphic:selector_ability_main"
        ohos:below="$id:sound_record_btn"
        ohos:end_padding="10vp"
        ohos:start_padding="10vp"
        ohos:text="$string:audio_setting"
        ohos:text_color="$color:dark_grey"
        ohos:text_size="18vp"
        ohos:top_margin="10vp"/>

</DependentLayout>